cmake_minimum_required(VERSION 2.8.3)
project(opencv)

## Find catkin macros and libraries
## if COMPONENTS list like find_package(catkin REQUIRED COMPONENTS xyz)
## is used, also find other catkin packages
find_package(catkin REQUIRED COMPONENTS
  sensor_msgs
  cv_bridge
  roscpp
  std_msgs
  image_transport
)


catkin_package(
#  INCLUDE_DIRS include
#  LIBRARIES opencv
#  CATKIN_DEPENDS roscpp rospy std_msgs
#  DEPENDS system_lib
)

###########
## Build ##
###########

## Specify additional locations of header files
## Your package locations should be listed before other locations
# include_directories(include)
include_directories(include ${catkin_INCLUDE_DIRS})


## Declare a cpp executable
add_executable(opencvros_node src/opencvros.cpp)
target_link_libraries(opencvros_node ${catkin_LIBRARIES})
add_dependencies(opencvros_node opencv_generate_messages_cpp)

## Declare a cpp executable
add_executable(driving src/driving.cpp)
target_link_libraries(driving ${catkin_LIBRARIES})
add_dependencies(driving opencv_generate_messages_cpp)

